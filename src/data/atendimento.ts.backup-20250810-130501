// Função para aplanar os dados por período
export const getAtendimentoDataFlattened = () => {
  const flattened = [];
  
  Object.entries(atendimentoData).forEach(([date, records]) => {
    records.forEach(record => {
      flattened.push({
        ...record,
        DATA: date
      });
    });
  });
  
  return flattened;
};

// Função para obter dados de hoje, semana e mês
export const getAtendimentoPeriods = () => {
  const now = new Date();
  const today = now.getDate().toString().padStart(2, '0') + (now.getMonth() + 1).toString().padStart(2, '0');
  
  // Para demonstração, considerando algumas datas como exemplos
  const oneWeekAgo = new Date(now.getTime() - 7 * 24 * 60 * 60 * 1000);
  const oneMonthAgo = new Date(now.getTime() - 30 * 24 * 60 * 60 * 1000);
  
  return {
    today: today,
    week: getDateKeys(7),
    month: getDateKeys(30)
  };
};

const getDateKeys = (days: number) => {
  const keys = [];
  const now = new Date();
  
  for (let i = 0; i < days; i++) {
    const date = new Date(now.getTime() - i * 24 * 60 * 60 * 1000);
    const key = date.getDate().toString().padStart(2, '0') + (date.getMonth() + 1).toString().padStart(2, '0');
    keys.push(key);
  }
  
  return keys;
};